{
  "name": "streaming-solution",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev:client": "pnpm --filter client dev",
    "dev:server": "pnpm --filter server start:dev",
    "dev": "pnpm -r dev",
    "dev:all": "concurrently -n server,client -c green,cyan \"pnpm dev:server\" \"pnpm dev:client\"",
    "build": "pnpm -r build"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "typescript": "^5.6.0"
  }
}
